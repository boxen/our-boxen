<VirtualHost *:<%= scope.lookupvar "apache::config::port" %>>
  UseCanonicalName off
  VirtualDocumentRoot <%= scope.lookupvar "apache::config::sitesdir" %>/%1
</VirtualHost>

<VirtualHost *:<%= scope.lookupvar "apache::config::ssl_port" %>>
  UseCanonicalName off
  VirtualDocumentRoot <%= scope.lookupvar "apache::config::sitesdir" %>/%1
  SSLEngine on
  SSLCertificateFile <%= scope.lookupvar "apache::config::ssl_certificate_file" %>
  SSLCertificateKeyFile <%= scope.lookupvar "apache::config::ssl_certificate_key_file" %>
</VirtualHost>
